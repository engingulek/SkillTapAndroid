        <variable
            name="advertDataState"
            type="com.example.skilltap.ui.search.SearchContract.AdvertDataState" />

        <variable
            name="freelancerDataState"
            type="com.example.skilltap.ui.search.SearchContract.FreelancerDataState" />

        <import type="android.view.View" />

    </data>

