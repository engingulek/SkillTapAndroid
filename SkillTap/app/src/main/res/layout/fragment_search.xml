        <SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/search_view"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/advertsBttn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@{advertButtonState.selected ? @drawable/selected_button_desing : @drawable/no_selected_button_desing}"
            android:text="@{advertButtonState.text}"
            android:textAllCaps="false"

            android:textColor="@{advertButtonState.selected ? @color/white : @color/red}"

            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            tools:ignore="MissingConstraints" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/freelancerBttn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@{freelancerButtonState.selected ? @drawable/selected_button_desing : @drawable/no_selected_button_desing}"
            android:text="@{freelancerButtonState.text}"
            android:textAllCaps="false"
            android:textColor="@{advertButtonState.selected ? @color/red : @color/white}"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listRv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:adapter="@{advertButtonState.selected ? advertAdapter : freelancerAdapter}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/advertsBttn" />

        <TextView
            android:id="@+id/advertMessageTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@{advertDataState.message}"
            app:layout_constraintBottom_toBottomOf="@+id/listRv"
            android:visibility="@{(advertDataState.messageState == true) == (advertButtonState.selected == true) ? View.VISIBLE : View.GONE}"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/freelancerMessageTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@{freelancerDataState.message}"
            android:visibility="@{(freelancerDataState.messageState == true) == (freelancerButtonState.selected == true) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
    </layout>